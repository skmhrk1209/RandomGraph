#version 120

const int size = 100;
const int skip = 1;
const int num = size / skip;
const float coefficient = 30.0;
const float exponent = 1.0;
uniform vec2 vertices[size];

void main() {

    float alpha = 0.0;

    for (int i = 0; i < size; i += skip) {
        alpha += coefficient / pow(length(vertices[i] - gl_FragCoord.xy), exponent) / num;
    }

    gl_FragColor = vec4(gl_Color.rgb, alpha);
}